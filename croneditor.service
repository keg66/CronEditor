[Unit]
Description=CronEditor Web Application
After=network.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/CronEditor
Environment=PATH=/home/pi/CronEditor/.venv/bin
ExecStart=/home/pi/CronEditor/.venv/bin/python app.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target